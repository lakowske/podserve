_DOLLAR_ORIGIN ${DNS_DOMAIN}.
_DOLLAR_TTL    604800
@       IN      SOA     ${DNS_SERVER_NAME}. admin.${DNS_DOMAIN}. (
                              2         ; Serial
                         604800         ; Refresh
                          86400         ; Retry
                        2419200         ; Expire
                         604800 )       ; Negative Cache TTL
;
@       IN      NS      ${DNS_SERVER_NAME}.
@       IN      A       10.0.0.1
ns      IN      A       10.0.0.2
mail    IN      A       10.0.0.3
www     IN      A       10.0.0.4
ftp     IN      A       10.0.0.5
